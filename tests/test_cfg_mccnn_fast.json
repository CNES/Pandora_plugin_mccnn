{
  "input" : {
    "img_left" : "tests/image/left_img.png",
    "img_right" : "tests/image/right_img.png",
    "disp_min" : -60,
    "disp_max" : 0
  },
  "pipeline": {
    "right_disp_map": {
	    "method": "accurate"
    },
    "matching_cost" : {
        "matching_cost_method": "mc_cnn",
